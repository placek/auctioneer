%h2
  = t('devise.registrations.new.title')

= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!

  %dl
    %dt
      = f.label t('devise.registrations.new.email')
    %dd
      = f.text_field :email

    %dt
      = f.label t('devise.registrations.new.password')
    %dd
      = f.password_field :password

    %dt
      = f.label t('devise.registrations.new.password_confirmation')
    %dd
      = f.password_field :password_confirmation

  %p
    = f.submit t('devise.registrations.new.sign_up')

= render :partial => "devise/shared/links"
