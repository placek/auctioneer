%html
  %head
    %title Auctioneer
    = stylesheet_link_tag    'application'
    = javascript_include_tag 'application'
    = csrf_meta_tag
  %body
    
    #navigation
      = render :partial => 'shared/session_bar'
    #top_frame
      %h1 Auctioneer
    #main
      - if flash[:warning]
        #warning
          = flash[:warning]
      - if flash[:notice]
        #notice
          = flash[:notice]
      - if flash[:error]
        #error
          = flash[:error]
      = yield
