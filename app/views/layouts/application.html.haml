%html
  %head
    %title Auctioneer
    = stylesheet_link_tag    'application'
    = javascript_include_tag 'application'
    = csrf_meta_tag
  %body

    #navigation
      %h1= link_to "Auctioneer", auctions_path
      = render :partial => 'shared/session_bar'

    #main
      - if flash[:warning]
        #warning
          = flash[:warning]
      - if flash[:notice]
        #notice
          = flash[:notice]
      - if flash[:error]
        #error
          = flash[:error]
      = yield

    #footer
      %center
        %p &nbsp;
