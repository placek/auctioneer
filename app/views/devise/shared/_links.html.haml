#devise_links
  - unless resource_name == :admin
    %ul
      - if controller_name != 'sessions'
        %li
          = link_to t('devise.navigation.sign_in'), new_session_path(resource_name)

      - if devise_mapping.registerable? && controller_name != 'registrations'
        %li
          = link_to t('devise.navigation.sign_up'), new_registration_path(resource_name)

      - if devise_mapping.recoverable? && controller_name != 'passwords'
        %li
          = link_to t('devise.navigation.forgotten_password'), new_password_path(resource_name)

      - if devise_mapping.confirmable? && controller_name != 'confirmations'
        %li
          = link_to t('devise.navigation.resend_confirm_instructions'), new_confirmation_path(resource_name)
